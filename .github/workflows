name: Ruby

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  test:

    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v2
    - name: Set up Ruby
      uses: ruby/setup-ruby@v1
      with:
        ruby-version: [3.0.x, 2.7.x, 2.6.x, 2.5.x]
    - name: Install dependencies
      run: bundle install
    - name: Run tests
      run: bundle exec rake